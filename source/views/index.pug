doctype html
html(lang="pt-br")


	head
			meta(charset="utf-8")
			meta(name="format-detection", content="telephone=no")
			meta(name="msapplication-tap-highlight", content="no")
			meta(name="viewport", content="user-scalable=no, initial-scale=1, maximum-scale=1, minimum-scale=1, width=device-width")

			title !{page.title} | !{page.company}
			
			link(rel="stylesheet", type="text/css", href="css/main.css")
	

	body
		.preload
			img.img-fluid.mb-4(src="images/brand.png")
			a(href="#", class="btn btn-preload") Clique para começar

		.container-fluid
			.row.wrapper
				header.col-lg-4.col-xl-3.text-light 

					//- Navbar
					nav.navbar.navbar-expand-lg.navbar-dark

						//- Title
						h1 !{page.header.title}

						//- Toggler
							button(class="navbar-toggler navbar-toggler-right border-0", type="button", data-toggle="collapse", data-target="#menu", aria-controls="menu", aria-expanded="false")
								span.navbar-toggler-icon

						//- Menu
						div.collapse.navbar-collapse(id="menu")
							ul.navbar-nav
								each item in page.menu
									li.nav-item
										a.nav-link.text-primary(href="#"+item.target, data-target=item.target) 
											i(class=item.icon)
											span.d-block.mt-lg-1 !{item.label}
					
					hr
					
					h2 !{page.header.lead}

					p.lead !{page.carro.description}

				main.col-lg-8.col-xl-9
					.container-fluid

						.row.wrapper.align-items-lg-baseline
							.col-lg-6.order-0
								figure.mb-0(id="figure")
									img.img-car.img-fluid(src=page.carro.image, alt=page.title)
							
							.col-lg-6.d-flex.flex-column.flex-lg-row.justify-content-lg-between.pr-lg-5.order-5.order-lg-1(id="features")
								aside.featured-items
									ul.list-inline
										each item in page.carro.features
											li.list-inline-item !{item}
								
								aside.suggested-price
									p 
										strong Preço sugerido
									h3 R$ !{page.financiamento.preco},00
						
							hr.order-2.d-lg-none

							.col-lg-8.px-lg-5.order-1.order-lg-3(id="cores")
								h4.mt-4.mt-lg-0 Cores disponíveis

								.row
									each color, index in page.cores

										.col-6.col-lg-4.col-xl-3
											div.form-check
												if index == 0
													input.form-check-input(type="radio", name="color", id=color.id, value=color.label, checked)
													label.form-check-label(for=color.id) !{color.title}
												else
													input.form-check-input(type="radio", name="color", id=color.id, value=color.label)
													label.form-check-label(for=color.id) !{color.title}


							.col-lg-4.px-lg-5.order-3.order-lg-4(id="acabamento")
								h4 Acabamento interno

								.row
									each item, index in page.acabamento

										.col-6
											div.form-check
												if index == 0
													input.form-check-input(type="radio", name="acabamento", id=item.id, value=item.title, checked)
													label.form-check-label(for=item.id) !{item.title}
												else
													input.form-check-input(type="radio", name="acabamento", id=item.id, value=item.title)
													label.form-check-label(for=item.id) !{item.title}
						
							hr.order-4.d-lg-none

							.col.order-6(id="financiamento")
								.jumbotron.text-dark
									h4 Simular financiamento

									.form-row
										.col-lg-4
											div.form-group
												label(for="entrada") 
													span Entrada
													output(for="entrada") 
												input(name="entrada", id="entrada", type="range", class="custom-range", min="2500", max="232800", step="500")

										.col-lg-4.ml-lg-auto
											div(class="form-group")
												label(for="parcelas") 
													output(for="parcelas") 24 
													span.mx-1 parcelas de 
													output(for="valor") 
												input(name="parcelas", id="parcelas", type="range", class="custom-range", min="6", max="48", step="1", value="24")
									
										.col-lg-3.text-right
											button.btn.btn-primary(type="submit", data-toggle="modal", data-target="#confirmaModal") Contratar

							//- footer.mt-auto.p-3.bg-dark.order-8.w-100


				//- Infos
				div(id="infos" class="panel hidden")
